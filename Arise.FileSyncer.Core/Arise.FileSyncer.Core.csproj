<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>net6.0</TargetFramework>
    <Nullable>enable</Nullable>
    <IsTrimmable>true</IsTrimmable>
    <EnableTrimAnalyzer>true</EnableTrimAnalyzer>
  </PropertyGroup>

  <PropertyGroup>
    <Description>Core of the Syncer Service</Description>
    <PackageProjectUrl>https://github.com/arisefs/Arise.FileSyncer.Core</PackageProjectUrl>
    <RepositoryUrl>https://github.com/arisefs/Arise.FileSyncer.Core</RepositoryUrl>
    <RepositoryType>git</RepositoryType>
    <Copyright>Copyright ©2021 Csányi István</Copyright>
    <Authors>Csányi István</Authors>
    <Company />
  </PropertyGroup>

  <PropertyGroup Condition="'$(Configuration)'=='Release'">
    <GenerateDocumentationFile>true</GenerateDocumentationFile>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="Arise.FileSyncer.Log" Version="2.0.0" />
    <PackageReference Include="Arise.FileSyncer.Serializer" Version="1.2.2" />
    <PackageReference Include="System.Threading.Channels" Version="6.0.0" />
  </ItemGroup>

</Project>
